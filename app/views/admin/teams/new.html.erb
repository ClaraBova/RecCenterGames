<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="section-heading">Add a new team</h2>

      <%= form_for @team, url: admin_teams_path do |f| %>

      <div class="form-group field">
        <%= f.label :name %>:<br />
        <%= f.text_field :name, class: "form-control", autofocus: true %>
      </div>

      <div class="form-group field">
        <%= f.label :league %>:<br />
        <%= f.text_field :league_id, class: "form-control", autofocus: true %>
      </div>

        <%= f.submit "Submit" %>
    <% end %>

      </div>
  </div>
</div>
