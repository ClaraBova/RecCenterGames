<div>
  <div class="container">
    <div id="upcomingGames" class="col-lg-12 text-center upcoming-games">
      <h2 class="section-heading">Upcoming Events</h2>
      <ul>
        <% @games.each do |game| %>
          <li>game starts at <%= game.starts_at %></li>
          <li><%= game.teams[0].name %> vs. <%= game.teams[1].name %></li>
        <% end %>
      </ul>
    </div>

    <div id="create-team" class="col-lg-12 text-center create-team">
      <h2 class="section-heading">Create a team</h2>
        <%= link_to "Add a team", new_team_path, class: "btn btn-primary" %>
    </div>

  </div>
</div>
